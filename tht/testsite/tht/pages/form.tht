

F main() {

    let form = Web.form({
        userName: {
            label: 'User Name',
            rule: 'min:4'
        },
        email: {
            label: 'Email',
            rule: 'email',
            value: 'a@b.com',
            help: 'Make sure it is valid!'
        },
        zip: {
            label: 'Zip Code',
            rule: 'optional|digits'
        },
        password: {
            label: 'Password',
            type: 'password',
        },
        comment: {
            label: 'Comment',
            type: 'textarea'
        },
        secret: {
            type: 'hidden',
            value: '12345',
        },
        color: {
            label: 'Color',
            type: 'select',
            options: Q[ red blue green ],
        },
        states: {
            label: 'State',
            type: 'select',
            options: {
                'wi': 'Wisconsin',
                'fl': 'Florida',
                'ca': 'California'
            }
        },
        toppings: {
            label: 'Toppings',
            type: 'radio',
            options: Q[ Pepperoni Pineapple Anchovies ]
        },
        // TODO
        // users: {
        //     label: 'User',
        //     type: 'select',
        //     options: [
        //         { userId: 1, name: 'Bob' },
        //         { userId: 2, name: 'Alice' },
        //         { userId: 3, name: 'Charlie' }
        //     ]
        // }
    });

    // let loginForm = Web.form({
    //     userName: {
    //         label: 'User Name',
    //         rule: 'min:4'
    //     },
    //     password: {
    //         label: 'Password',
    //         type: 'password',
    //     }
    // }, 'loginForm');



    let html = '';
    if (form.ok()) {
        html = processForm(form);
    } else {
        html = formHtml(form);
    }

    Web.sendPage({
        body: html,
        title: 'Test Form',
        css: Css.include('base')
    });
}

F processForm(form) {
    print(form.data());
    return thanksHtml(form.data());
}

T thanksHtml(d) {

    <.row><.col>

        <h1>> Success

        <p>> Thanks <b>> {{ d.userName }}!

        </></>
}

F getOptions() {
    return {
        '1': 'Option 1',
        '2': 'Option 2',
        '3': 'Option 3',
    };
}


T formHtml(form) {

    <.row><.col>

        <h1>> Test Form

        :: let f = form;

        {{ f.open() }}

            {{ f.tag('userName') }}
            {{ f.tag('email') }}
            {{ f.tag('password') }}
          
            {{ f.tag('zip') }}

            {{ f.tag('comment') }}

            {{ f.tag('secret') }}

            {{ f.tag('color') }}

            {{ f.tag('states') }}

            {{ f.tag('toppings') }}

            {{ f.submit('Submit', { class: 'button-large button-primary' }) }}

        {{ f.close() }}


    </></>


}



